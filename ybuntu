#!/bin/bash

LOG_FILE="/var/log/system_monitor.log"

touch "$LOG_FILE"
chmod 644 "$LOG_FILE"

{
    echo "=============================="
    echo "Timestamp: $(date)"
    echo "------------------------------"

    echo "Uptime:"
    uptime
    echo ""

    echo "CPU Usage:"
    top -bn1 | grep "Cpu(s)"
    echo ""

    echo "Memory Usage:"
    free -h
    echo ""

    echo "Disk I/O Statistics:"
    iostat -dx 1 1
    echo ""

} >> "$LOG_FILE"
